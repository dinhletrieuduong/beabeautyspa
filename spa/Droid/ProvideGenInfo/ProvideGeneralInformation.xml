
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:minHeight="25px"
        android:minWidth="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                android:id="@+id/textTitle"
                android:textSize="25sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="Let's get started"
                android:gravity="center_horizontal|top"/>

            <TextView
                android:id="@+id/textAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="Personal information"
                android:gravity="top"/>

            <TextView
                android:id="@+id/textProfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Your profession *"
                android:gravity="top"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/edtProfession"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#d9d9d9"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textIC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="IC *"
                android:gravity="top"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/edtIC"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#d9d9d9"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Weight (kg) *"
                android:gravity="top"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/edtWeight"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#d9d9d9"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Height (cm) *"
                android:gravity="top"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/edtHeight"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#d9d9d9"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textBasicLifestyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Basic Lifestyle"
                android:gravity="top"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/edtBasicLifestyle"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#d9d9d9"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textHabit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Habit"
                android:gravity="top"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/edtHabit"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#d9d9d9"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textBodyMass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Body mass"
                android:gravity="top"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/edtBodyMass"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#d9d9d9"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textBMI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="BMI"
                android:gravity="top"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/edtBMI"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#d9d9d9"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textFat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Fat content (%)"
                android:gravity="top"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/edtFat"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#d9d9d9"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textMuscle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Muscle content (%)"
                android:gravity="top"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/edtMuscle"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#d9d9d9"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textStomachFat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Stomach fat (%)"
                android:gravity="top"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/edtStomachFat"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#d9d9d9"/>
            </LinearLayout>

            <Button
                android:id="@+id/buttonFinish"
                android:gravity="center"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="20dp"
                android:text="Finish"
                android:background="@drawable/button_radius"
                android:textColor="#ffffff"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>