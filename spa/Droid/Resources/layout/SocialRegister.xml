<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitle"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="20dp"
            android:text="More infromation needed"
            android:gravity="center_horizontal|top"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="395.0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/already_hav"
                android:layout_width="170dp"
                android:layout_height="19dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="85sp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:text="Already had an account ?"
                android:gravity="top"/>

            <TextView
                android:id="@+id/textSignIn"
                android:layout_width="60dp"
                android:layout_height="19dp"
                android:textColor="#33691e"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0sp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:text="SIGN IN"
                android:gravity="top"/>
        </LinearLayout>

        <TextView
            android:id="@+id/general_inf"
            android:layout_width="256dp"
            android:layout_height="35dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="33sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="General Information"
            android:gravity="top"/>

        <TextView
            android:id="@+id/textFullname"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="34sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:text="Full name"
            android:gravity="top"/>
        <EditText
            android:id="@+id/edtFullname"
            android:layout_width="330dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="#d9d9d9"/>

        <TextView
            android:id="@+id/textDOB"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="34sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:text="Date of birth"
            android:gravity="top"/>
        <DatePicker
            android:id="@+id/DatepickerDOB"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"/>

        <TextView
            android:id="@+id/textGender"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="34sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="Gender"
            android:gravity="top"/>

        <RadioGroup
            android:minHeight="25px"
            android:minWidth="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:layout_marginLeft="34sp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:layout_marginLeft="24sp"/>
            </LinearLayout>
        </RadioGroup>

        <TextView
            android:id="@+id/textPhone"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="34sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="Phone number"
            android:gravity="top"/>
        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="330dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="#d9d9d9"/>

         <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <CheckBox
                    android:text="Agree to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="70dp"/>
                <TextView
                    android:id="@+id/textTermCon"
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:textColor="#6ca6bd"
                    android:textStyle="italic"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0sp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="70dp"
                    android:text=" terms and conditions"
                    android:gravity="top"/>
         </LinearLayout>

        <Button
            android:id="@id/buttonSignUp"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="20dp"
            android:text="Sign Up"
            android:background="#33691E"
            android:textColor="#ffffff"/>

    </LinearLayout>
</RelativeLayout>