<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:minHeight="25px"
android:minWidth="25px"
android:background="@android:color/white"
>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <TextView
    android:id="@+id/textTitle"
    android:textSize="25sp"
    android:textColor="#000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="Create new account"
    android:gravity="center_horizontal|top"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
        android:id="@+id/already_hav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="0dp"
        android:text="Already had an account ?"
        android:gravity="top"/> 

        <TextView
        android:id="@+id/textSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#33691e"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:text="SIGN UP"
        android:gravity="top"/>

    </LinearLayout>
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtEmail"
        android:hint="@string/hint_EmailAddress"
        android:background="@drawable/edittextbottomline"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            />
    <EditText
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtName"
        android:hint="@string/hint_Name"
        android:background="@drawable/edittextbottomline"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            />
    <EditText
        android:inputType="textPostalAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtAddress"
        android:hint="@string/hint_Address"
        android:background="@drawable/edittextbottomline"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtPassword"
        android:hint="@string/hint_Password"
        android:background="@drawable/edittextbottomline"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtConfirmPassword"
        android:hint="@string/hint_ConfirmPassword"
        android:background="@drawable/edittextbottomline"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            />
    <Button
            android:layout_marginTop="20dp"
        android:text="@string/text_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borderbuttonstyle"
        android:textColor="@android:color/white"
        android:id="@+id/btnSignUp" />
</LinearLayout>
</ScrollView>
