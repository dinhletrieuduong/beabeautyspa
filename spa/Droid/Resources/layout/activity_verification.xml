<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryWhite">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/primary"
            android:paddingTop="20dp"
            android:paddingBottom="15dp">
            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/left_arrow"
                android:contentDescription="Back"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Verification"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:gravity="center"/>
            
            <TextView
                android:id="@+id/errorTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="@string/VerificateError"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textColor_3"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="130dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextbottomline"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:inputType="phone"
                    android:textAlignment="center"
                    />
                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextbottomline"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:inputType="phone"
                    android:textAlignment="center"
                    />
                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextbottomline"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:inputType="phone"
                    android:textAlignment="center"
                    />
                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextbottomline"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:inputType="phone"
                    android:textAlignment="center"
                    />
                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextbottomline"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:inputType="phone"
                    android:textAlignment="center"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/resendBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Resend"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
            <Button
                android:id="@+id/continueBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borderbuttonstyle"
                android:text="@string/Continue"
                android:textColor="@color/primaryWhite"
                style="@style/NoShadowButton"
                />
        </LinearLayout>
    </LinearLayout>
            
</ScrollView>
