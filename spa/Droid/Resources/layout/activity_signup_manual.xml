<?xml version="1.0" encoding="utf-8"?>
<ScrollView
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primaryWhite"
    >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
        >
        <TextView
        android:id="@+id/textTitle"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Create new account"
        android:gravity="center_horizontal|top"/>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

            <TextView
            android:id="@+id/already_hav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already had an account?"
            android:gravity="top"
            />

            <TextView
            android:id="@+id/textSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#33691e"
            android:textStyle="bold"
            android:text="SIGN IN"
            android:gravity="top"
            android:layout_marginRight="8dp"/>
        </LinearLayout>

    

        <TextView
        android:id="@+id/textAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20sp"
        android:text="Your account"
        android:gravity="top"/>

        <TextView
        android:id="@+id/textUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10sp"
        android:text="Username"
        android:gravity="top"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
            <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:backgroundTint="#d9d9d9"/>
        </LinearLayout>

        <TextView
        android:id="@+id/textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="0sp"
        android:text="Password"
        android:gravity="top"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
            <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginTop="10sp"
            android:backgroundTint="#d9d9d9"/>
        </LinearLayout>

    <TextView
    android:id="@+id/textConPassword"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="15sp"
    android:layout_marginTop="0sp"
    android:text="Confirm Password"
    android:gravity="top"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">        
            <EditText
            android:id="@+id/edtConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginTop="10sp"
            android:backgroundTint="#d9d9d9"/>
        </LinearLayout>

        <TextView
        android:id="@+id/general_inf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="10sp"
        android:text="General Information"
        android:gravity="top"/>
    
        <TextView
        android:id="@+id/textFullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10sp"
        android:text="Full name"
        android:gravity="top"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <EditText
        android:id="@+id/edtFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:backgroundTint="#d9d9d9"
        />
        </LinearLayout>

        <TextView
        android:id="@+id/textDOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="0sp"
        android:text="Date of birth"
        android:gravity="top"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
            <TextView
            android:id="@+id/edtDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:background="@drawable/edittextbottomline"
            />
        </LinearLayout>

        <TextView
        android:id="@+id/textGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10sp"
        android:text="Gender"
        android:gravity="top"/>

        <RadioGroup
        android:id="@+id/rdgGender"
        android:minHeight="25px"
        android:minWidth="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <RadioButton
                android:id="@+id/btnMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                />
                <RadioButton
                android:id="@+id/btnFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                    />
            </LinearLayout>
        </RadioGroup>

        <TextView
        android:id="@+id/textEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="0sp"
        android:text="Email"
        android:gravity="top"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
            <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:backgroundTint="#d9d9d9"/>
        </LinearLayout>

        <TextView
        android:id="@+id/textPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="0sp"
        android:text="Phone number"
        android:gravity="top"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
            <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:backgroundTint="#d9d9d9"/>
        </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
            <CheckBox
            android:text="Agree to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <TextView
            android:id="@+id/textTermCon"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:textColor="#6ca6bd"
            android:textStyle="italic"
            android:text=" terms and conditions"
            android:gravity="top"/>
        </LinearLayout>

        <Button
        android:id="@+id/btnSignUp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sign Up"
        android:background="@drawable/borderbuttonstyle"
        android:textColor="#ffffff"
        />

        <TextView
        android:id="@+id/textSignUpDifferent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="20sp"
        android:text="Sign up using Social network"
        android:gravity="center_horizontal"/>

    </LinearLayout> 
</ScrollView>
