
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:minHeight="25px"
        android:minWidth="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:stretchColumns="1">

          <TextView
        android:id="@+id/textTitle"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Create new account"
        android:gravity="center_horizontal|top"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="395.0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/already_hav"
                    android:layout_width="170dp"
                    android:layout_height="19dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="85dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:text="Already had an account ?"
                    android:gravity="top"/>

                <TextView
                    android:id="@+id/textSignIn"
                    android:layout_width="60dp"
                    android:layout_height="19dp"
                    android:textColor="#33691e"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:text="SIGN IN"
                    android:gravity="top"/>

            </LinearLayout>

    

    <TextView
        android:id="@+id/textAccount"
        android:layout_width="256dp"
        android:layout_height="35dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Your account"
        android:gravity="top"/>

    <TextView
        android:id="@+id/textUsername"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:text="Username"
        android:gravity="top"/>

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#d9d9d9"/>

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="dp"
        android:text="Password"
        android:gravity="top"/>

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="256dp"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#d9d9d9"/>

    <TextView
        android:id="@+id/textConPassword"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:text="Confirm Password"
        android:gravity="top"/>

    <EditText
        android:id="@+id/edtConPassword"
        android:layout_width="256dp"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#d9d9d9"/>

    <TextView
        android:id="@+id/general_inf"
        android:layout_width="256dp"
        android:layout_height="35dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="General Information"
        android:gravity="top"/>
    
    <TextView
        android:id="@+id/textFullname"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:text="Full name"
        android:gravity="top"/>
    <EditText
        android:id="@+id/edtFullname"
        android:layout_width="256dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#d9d9d9"/>

    <TextView
        android:id="@+id/textDOB"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:text="Date of birth"
        android:gravity="top"/>
    <DatePicker
        android:id="@+id/DatepickerDOB"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/textGender"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:text="Gender"
        android:gravity="top"/>

            <RadioGroup
                android:minHeight="25px"
                android:minWidth="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                 <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:layout_marginLeft="34dp"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:layout_marginLeft="24dp"/>

                 </LinearLayout>
            </RadioGroup>

            <TextView
                android:id="@+id/textEmail"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:text="Email"
                android:gravity="top"/>
             <EditText
                android:id="@+id/edtEmail"
                android:layout_width="256dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
        		android:backgroundTint="#d9d9d9"/>

            <TextView
                android:id="@+id/textPhone"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:text="Phone number"
                android:gravity="top"/>
             <EditText
                android:id="@+id/edtPhone"
                android:layout_width="256dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
        		android:backgroundTint="#d9d9d9"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <CheckBox
                    android:text="Agree to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"/>
                <TextView
                    android:id="@+id/textTermCon"
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:textColor="#6ca6bd"
                    android:textStyle="italic"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:text=" terms and conditions"
                    android:gravity="top"/>
            </LinearLayout>

            <Button
                android:id="@id/buttonSignUp"
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:layout_marginTop="20dp"
                android:text="Sign Up"
                android:background="#33691E"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/textSignUpDifferent"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="90dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:text="Sign up using Social network"
                android:gravity="top"/>

            <LinearLayout
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/buttonFacebook"
                    android:src="@drawable/facebook"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="50dp"/>
                <ImageButton
                    android:id="@+id/buttonTwitter"
                    android:src="@drawable/twitter"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="35dp"/>
                <ImageButton
                    android:id="@+id/buttonLinkedin"
                    android:src="@drawable/linkedin"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="35dp"/>

            </LinearLayout>
    </TableLayout> 

    </ScrollView>>
</RelativeLayout>