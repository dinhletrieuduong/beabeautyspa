<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android = "http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
        android:id="@+id/linearLayout">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView
        android:id="@+id/serviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
          
        android:text="Body massage"
        android:textColor="@color/primaryDark"
        android:gravity="top"/>
        <TextView
        android:id="@+id/timeTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:text="30 minutes"
        android:textColor="@color/primary"
        android:background="@drawable/edittextbottomline"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Therapist 1"
        android:textAlignment="textEnd"
            android:id="@+id/therapistName"/>
        <TextView
        android:id="@+id/breakTimeTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:text="breaks 15 minutes"
        android:gravity="right"
        android:textColor="@color/primaryRed_2"
        android:background="@drawable/edittextbottomline"/>
    </LinearLayout>
</LinearLayout>
