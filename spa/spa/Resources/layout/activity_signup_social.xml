<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    android:background="@color/primaryWhite"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">
        <TextView
        android:id="@+id/textTitle"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="More infromation needed"
        android:gravity="center_horizontal|top"/>
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
            <TextView
            android:id="@+id/already_hav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already had an account? "
            android:gravity="top"/>

            <TextView
            android:id="@+id/textSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#33691e"
            android:textStyle="bold"
            android:text="SIGN IN"
            android:gravity="top"/>
        </LinearLayout>
        <TextView
        android:id="@+id/general_inf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:text="General Information"
        android:gravity="top"/>

        <TextView
        android:id="@+id/textFullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Full name"
        android:gravity="top"/>

        <TextView
        android:id="@+id/invalidTxtView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="* Please provide Full-name *"
        android:textSize="15sp"
        android:textColor="#ff0000"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
            <EditText
            android:id="@+id/edtFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/edittextbottomline"/>
        </LinearLayout>

        <TextView
        android:id="@+id/textDOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Date of birth"
        android:layout_marginTop="20dp"
        android:gravity="top"/>
        <TextView
        android:id="@+id/invalidTxtView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="* Please provide date of birth *"
        android:layout_marginLeft="34sp"
        android:textSize="15sp"
        android:textColor="#ff0000"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
            <TextView
            android:id="@+id/edtDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
            android:background="@drawable/edittextbottomline"
            />
        </LinearLayout>
        <TextView
        android:id="@+id/textGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:text="Gender"
        android:gravity="top"/>
        <TextView
        android:id="@+id/invalidTxtView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="* Please choose your physical gender *"
        android:textSize="15sp"
        android:textColor="#ff0000"/>
        <RadioGroup
        android:id="@+id/rdgGender"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <RadioButton
                android:id="@+id/btnMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"/>
                <RadioButton
                android:id="@+id/btnFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"/>
            </LinearLayout>
        </RadioGroup>

            <TextView
            android:id="@+id/textPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:text="Phone number"
            android:gravity="top"/>
            <TextView
            android:id="@+id/invalidTxtView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="* Please provide 10 digits phone number *"
            android:textSize="15sp"
            android:textColor="#ff0000"/>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
                <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:inputType="phone"
                android:background="@drawable/edittextbottomline" />
            </LinearLayout>

        <TextView
            android:id="@+id/invalidTxtView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="* Please check the box belo to agree terms and conditions *"
            android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:textSize="15sp"
        android:textColor="#ff0000"/>
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal">
        <CheckBox
        android:id="@+id/isAcceptTerm"
        android:text="Agree to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
        android:id="@+id/textTermCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#6ca6bd"
        android:textStyle="italic"
        android:text=" terms and conditions"
        android:gravity="top"/>
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">
        <Button
        android:id="@+id/btnSignUp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:background="@drawable/BorderButtonStyle"
        android:textColor="#ffffff"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
