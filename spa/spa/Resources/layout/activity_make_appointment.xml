<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#ffffff"
android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:padding="20dp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_btn"
                android:layout_gravity="center"
                android:id="@+id/backBtn"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_gravity="center">
            <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make new appointment"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

            <include
                layout="@layout/custom_location_spinner"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:id="@+id/selectDateBtn">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Date"
                    android:gravity="top"/>
                    <TextView
                    android:id="@+id/edtDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextbottomline"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:text="Select"
                    android:gravity="right"
                    android:textColor="@color/primary"
                    android:background="@drawable/edittextbottomline"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:id="@+id/selectStartingTimeBtn">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Starting time"
                    android:gravity="top"/>
                    <TextView
                    android:id="@+id/startingTimeTxtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextbottomline"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:text="Select"
                    android:gravity="right"
                    android:textColor="@color/primary"
                    android:background="@drawable/edittextbottomline"/>
                </LinearLayout>
            </LinearLayout>
        
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_background"
            android:layout_marginTop="30dp"
            >
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/border_right"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="01 : 45"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="hours     mins"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        />
                    </LinearLayout>
                </LinearLayout>
            
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your appointment will be ended at 10:15 20/08/2020"
                        android:textSize="17sp"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:orientation="horizontal"
                android:id="@+id/serviceChangeBtn">
                <TextView
                    android:id="@+id/edtStartingTime"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:textSize="18sp"
                    android:text="Services"
                    android:textColor="@color/primaryDark"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextbottomline"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:text="Change your services"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:textColor="@color/primary"
                    android:background="@drawable/edittextbottomline"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Body massage"
                    android:textColor="@color/primaryDark"
                    android:gravity="top"/>
                    <TextView
                    android:id="@+id/edtServive_1_Time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:text="30 minutes"
                    android:textColor="@color/primary"
                    android:background="@drawable/edittextbottomline"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:text="breaks 15 minutes"
                    android:gravity="right"
                    android:textColor="@color/primaryRed_2"
                    android:background="@drawable/edittextbottomline"/>
                </LinearLayout>
            </LinearLayout>

        
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Massage therapy"
                    android:textColor="@color/primaryDark"
                    android:gravity="top"/>
                    <TextView
                    android:id="@+id/edtServive_2_Time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:text="30 minutes"
                    android:textColor="@color/primary"
                    android:background="@drawable/edittextbottomline"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:text="breaks 15 minutes"
                    android:gravity="right"
                    android:textColor="@color/primaryRed_2"
                    android:background="@drawable/edittextbottomline"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create appointment"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:textColor="@color/primaryWhite"
                android:background="@drawable/borderbuttonstyle"/>
        </LinearLayout>
    

    </LinearLayout>
</ScrollView>
