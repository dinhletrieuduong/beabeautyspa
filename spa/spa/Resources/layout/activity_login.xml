<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryWhite"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:gravity="center"
                >
            <ImageView
                android:layout_width="300dp"
                android:layout_height="190dp"
                android:src="@drawable/logo"
                android:contentDescription="@string/Logo"
                android:padding="15dp"
                android:layout_margin="10dp"
                />
            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    >
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint_Username"
        android:textSize="18sp"
    />
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtEmail"
        android:hint="@string/hint_Username"
        android:background="@drawable/edittextbottomline"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="18sp"
            
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint_Password"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
    />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtPassword"
        android:hint="@string/hint_Password"
        android:background="@drawable/edittextbottomline"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="18sp"
            
    />
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            >
            <TextView
            android:id="@+id/btnForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="italic|bold"
            android:textColor="@color/primary"
            android:text="@string/hint_ForgotPassword"
                    />
            <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="0dp"
            android:background="@color/primary" />
     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/invalidTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/UsernameOrPassInValid"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/primaryRed"
            android:visibility="gone"/>
        <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/primaryWhite"
        android:text="@string/text_SignIn"
        style="@style/NoShadowButton"
        android:background="@drawable/borderbuttonstyle"
        />
            
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
        >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextbottomline"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/text_OrSignInWith"
                        android:gravity="center"
                    />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextbottomline"
                />
                
        </LinearLayout>
    </LinearLayout>
        
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        >
        <ImageView android:id="@+id/FacebookButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/facebook"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/Logo"
            />
        <ImageView
            android:id="@+id/TwitterButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/twitter"
            android:contentDescription="@string/Logo"
                    
            />
        <ImageView
            android:id="@+id/LinkedInButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/linkedin"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/Logo"
                    
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DontHaveAccount"
            android:layout_marginRight="8dp"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:text="@string/text_SignUp"
            />
        </LinearLayout>
            
    </LinearLayout>
        

    <!--<ProgressBar android:id="@+id/circularProgressbar" style="?android:attr/progressBarStyleHorizontal" android:layout_width="250dp" android:layout_height="250dp" android:indeterminate="false" android:max="100" android:progress="50" android:layout_centerInParent="true" android:progressDrawable="@drawable/circlebardesign" android:secondaryProgress="100"
        android:visibility="invisible"/>-->

</LinearLayout>
            
    </LinearLayout>
</ScrollView>
   
